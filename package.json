{
  "name": "cerberus",
  "version": "1.0.0",
  "description": "CLI tool for preparing files and projects for Claude AI",
  "main": "bin/cerberus.js",
  "bin": {
    "cerberus": "./bin/cerberus.js"
  },
  "type": "commonjs",
  "scripts": {
    "start": "node bin/cerberus.js",
    "cli": "node bin/cerberus.js",
    "lint": "eslint src bin",
    "lint:fix": "eslint src bin --fix",
    "format": "prettier --write \"src/**/*.{js,json}\" \"bin/**/*.{js,json}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:file": "jest --testPathPattern"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "cli",
    "file-management",
    "project-management",
    "claude",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "conf": "^10.2.0",
    "dotenv": "^16.4.5",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "glob": "^8.1.0",
    "fs-extra": "^11.2.0",
    "figlet": "^1.7.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  }
}
